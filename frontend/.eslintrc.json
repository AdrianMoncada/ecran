{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"next",
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:prettier/recommended",
		"next/core-web-vitals"
	],
	"ignorePatterns": ["next/babel"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"indent": "off",
		"prettier/prettier": [
			"error",
			{
				"endOfLine": "auto"
			}
		],
		"no-unused-vars": "error",
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"react/prop-types": 0
	}
}
